@using HRAPP.Entities;

<h1>Employee List</h1>
<hr />

@{
    List<Employee> employees = (List<Employee>)TempData["allEmployees"];
}
<table class="table table-success table-striped" style="text-align: center;">
    <tr>
        <th>Employee Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Address</th>
        <th>Actions</th>
    </tr>

         @{

        foreach (Employee emp in employees)
        {
            <tr>
                <td>@emp.Id</td>
                <td>@emp.FirstName</td>
                <td>@emp.LastName</td>
                <td>@emp.Address</td>
                <td><button class="btn btn-success btn-sm"><a class="link-dark" href="/employees/details/@emp.Id">Details</a></button> | <button class="btn btn-info btn-sm"><a class="link-dark"
                    href="/employees/edit/@emp.Id">Edit</a></button> | <button class="btn btn-danger btn-sm"><a class="link-dark" href="/employees/delete/@emp.Id">Delete</a></button></td>

            </tr>
        }
}
    </table>
    <hr />

    <div class="text-center">
    <button style="width: 200px;"><a href="/Employees/Register">New Employee</a></button>
    </div>
    
    